package com.robot;

public class Program1 {

	private SensorController controller;
	private MovementController movementController;

	public Program1() {
		try {
			controller = new SensorController();
			controller.start();
		} catch (InterruptedException e1) {
			e1.printStackTrace();
		}
		movementController = new MovementController();
		new Thread() {
			public void run() {
				try {
					scan();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			};
		}.start();
	}

	public void scan() throws InterruptedException {
		while (true) {
			System.out.println(controller.getDistance());
			Thread.sleep(100);
			if (controller.getDistance() < 70) {
				movementController.setSleep(3);
				System.out.println("stop!");
				movementController.stop();
				Thread.sleep(500);
				if(controller.getDistance() < 80)
				movementController.backward();
				Thread.sleep(1000);
				movementController.setSleep(2);
				while (controller.getDistance() < 80) {
					movementController.left();
					Thread.sleep(100);
				}
				Thread.sleep(100);
				movementController.stop();
				Thread.sleep(500);
				scan();
				break;
			} else {
				movementController.setSleep(1);
				movementController.forward();
			}
		}
	}
}
